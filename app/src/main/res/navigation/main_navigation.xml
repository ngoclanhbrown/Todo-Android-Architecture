<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.brown.todo.ui.screen.home.HomeFragment"
        android:label="@string/fragment_home_title"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_add_new_task"
            app:destination="@id/add_task_fragment" />

    </fragment>

    <fragment
        android:id="@+id/add_task_fragment"
        android:name="com.brown.todo.ui.screen.add.AddTaskFragment"
        android:label="@string/fragment_add_task_title"
        tools:layout="@layout/fragment_add_task" />

</navigation>